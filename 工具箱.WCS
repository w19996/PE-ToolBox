_SUB encrypt
    FDIR fPath=%Edit2%
    NAME -ext fNam1=%Edit2%
    CMPS "%Edit2%" "%fPath%\加密_%fNam1%"
_END
_SUB compress
    FDIR fPath=%Edit2%
    NAME -ext fNam1=%Edit2%
    CMPS -m "%Edit2%" "%fPath%\压缩_%fNam1%"
_END
_SUB uncompressed
    FDIR fPath=%Edit2%
    NAME -ext fNam1=%Edit2%
    CMPS -u "%Edit2%" "%fPath%\解压_%fNam1%"
_END
